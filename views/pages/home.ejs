<!DOCTYPE html>
<html>
<head>
   <% include ../partials/head %>
</head>
<body>
   <header>
      <% include ../partials/header %>
   </header>
   <div class="m-auto w-50 p-3 border rounded">
      Uninvested Money: <%= money %> <br>
      <label for="search">Search stocks (Use the symbol, not the name):</label>
      <input id="search" type="text" placeholder="E.G: TWTR"><br>
      <button type="button" class="btn-primary rounded" onclick="searchStocks()">Search</button>
      <div id="searchResult"></div>
   </div>
   <div class="mx-auto my-3 w-50 p-3 border rounded">
      <h3>Purchased Stocks</h3> 
      <table class="table">
         <tr>
            <th>
               Name
            </th>
            <th>
               Money Invested
            </th>
            <th>
               Current Price
            </th>
            <th>
               Quantity
            </th>
            <th>
               Equity
            </th>
            <th>
               Total Change
            </th>
            <th>
            </th>
         </tr>
      <% stocks.forEach(function(stock) {%>
         <tr>
            <td>
               <%= stock.symbol %>
            </td>
            <td>
               $<%= stock.money_invested %>
            </td>
            <td>
               $<%= stock.current_price %>
            </td>
            <td>
               <%= stock.quantity %>
            </td>
            <td>
               $<%= stock.current_value %>
            </td>
            <td>
               $<%= stock.current_value - stock.money_invested %>
            </td>
            <td>
               <button onclick="sell(this)">Sell</button>
            </td>
         </tr>
      <% }); %>
      
      </table>
   </div>
</body>
</html>